<!-- BREADCRUMB -->
<div id="breadcrumb" class="section">
  <!-- container -->
  <div class="container">
    <!-- row -->
    <div class="row">
      <div class="col-md-12">
        <ul class="breadcrumb-tree">
          <li><a href="#">Trang chủ</a></li>
          <li class="active">Điện thoại</li>
        </ul>
      </div>
    </div>
    <!-- /row -->
  </div>
  <!-- /container -->
</div>
<!-- /BREADCRUMB -->

<!-- SECTION -->
<div class="section">
  <!-- container -->
  <div class="container">
    <!-- row -->
    <div class="row">
      <!-- ASIDE -->
      <div id="aside" class="col-md-3">
        <!-- aside Widget -->
        <div class="aside">
          <h3 class="aside-title">Thương hiệu</h3>
          <div class="checkbox-filter">
            <div class="input-checkbox">
              <input type="checkbox" checked />
              <label for="brand-1">
                <span></span>
                Tất cả
                <small></small>
              </label>
            </div>
            {{#each brand}}
              <div class="input-checkbox">
                <input type="checkbox" />
                <label for="brand-1">
                  <span></span>
                  {{this.tenth}}
                  <small></small>
                </label>
              </div>
            {{/each}}
          </div>
        </div>
        <!-- /aside Widget -->

        <!-- aside Widget -->
        <!-- /aside Widget -->
      </div>
      <!-- /ASIDE -->

      <!-- STORE -->
      <div id="store" class="col-md-9">
        {{#if message}}
          <div class="alert alert-success" role="alert">
            {{message.success}}
          </div>
        {{/if}}
        <!-- store top filter -->
        <div class="store-filter clearfix">
          <div class="store-sort">
            <label>
              Sắp xếp:
              <select class="input-select">
                <option value="0">Từ thấp đến cao</option>
                <option value="1">Từ cao đến thấp</option>
              </select>
            </label>
          </div>
          <ul class="store-grid">
            <li class="active"><i class="fa fa-th"></i></li>
            <li><a href="#"><i class="fa fa-th-list"></i></a></li>
          </ul>
        </div>
        <!-- /store top filter -->

        <!-- store products -->
        <div class="row">
          {{! <div class="clearfix visible-sm visible-xs"></div> }}

          <!-- product -->
          {{#each product}}
            {{#ifCond this.trangthai 1}}
              <div class="col-md-4 col-xs-6">
                <div class="product">
                  <div class="product-img effect_1">
                    <img src="{{this.hinhanh}}" alt="" />
                  </div>
                  <div class="product-body">
                    <p class="product-category"></p>
                    <h3 class="product-name" style="font-size: 12px;"><a
                        href="/phu-kien/{{this.slugsp}}"
                      >{{this.tensp}}</a></h3>
                    <h4 class="product-price">{{number this.giaban}}
                      đ
                      <del class="product-old-price">{{number this.giagoc}}
                        đ</del></h4>
                    <div
                      class="card"
                      style="background-color: #e6e6e6;border-radius: 5px"
                    >
                      <div
                        class="card-body"
                        style="font-size: 13px; text-align: left; padding-top: 10px; padding-left: 15px; margin-top: 15px;"
                      >         
                          <div style="padding-top: 10px; padding-bottom: 10px">
                            <span><img
                                src="https://business.momo.vn/assets/landingpage/img/931b119cf710fb54746d5be0e258ac89-logo-momo.png"
                                width="50px"
                              /></span>
                            <span><img
                                src="https://cdn.tgdd.vn/2020/04/GameApp/image-180x180.png"
                                width="50px"
                              /></span>
                          </div>
                          <div>Giảm thêm 5% tối đa 500.000đ</div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            {{/ifCond}}
          {{/each}}
        </div>

        <!-- /store products -->

        <!-- store bottom filter -->
        <div class="store-filter clearfix">
          <ul class="store-pagination">
            <li class="active">1</li>
            <li><a href="#">2</a></li>
            <li><a href="#">3</a></li>
            <li><a href="#">4</a></li>
            <li><a href="#"><i class="fa fa-angle-right"></i></a></li>
          </ul>
        </div>
        <!-- /store bottom filter -->
      </div>
      <!-- /STORE -->
    </div>
    <!-- /row -->
  </div>
  <!-- /container -->
</div>
<!-- /SECTION -->