<div class="content-body">
  <div class="container-fluid">
    <div class="row d-flex justify-content-center">
      <div class="col-lg-6">
        <div class="card">
          <div class="card-title text-center pt-5">
            <h4>THAY ĐỔI MÃ GIẢM GIÁ</h4>
          </div>
          <div class="card-body">
            <div class="basic-form">
              <form method="post" action="/admin/update-coupon/{{coupon._id}}?_method=PUT">
                <div class="form-group">
                  <label>Tên mã</label>
                  <input
                    type="text"
                    class="form-control"
                    placeholder="Nhập tên mã"
                    name="tenma"
                    value="{{coupon.tenma}}"
                    required
                  />
                </div>
                <div class="form-group">
                  <label>Mô tả</label>
                  <input
                    type="text"
                    class="form-control"
                    placeholder="Nhập mô tả"
                    name="mota"
                    value="{{coupon.mota}}"
                    required
                  />
                </div>
                <div class="form-group">
                  <label for="exampleFormControlSelect1">Hình thức giảm</label>
                  <select
                    class="form-control"
                    id="exampleFormControlSelect1"
                    name="hinhthuc"
                  >
                    {{#ifCond coupon.hinhthuc 1}}
                      <option selected value="1">Giảm bình thường</option>
                      <option value="2">Giảm theo %</option>
                    {{else}}
                      <option value="1">Giảm bình thường</option>
                      <option selected value="2">Giảm theo %</option>
                    {{/ifCond}}
                  </select>
                </div>
                <div class="form-group">
                  <label>Mức giảm</label>
                  <input
                    type="text"
                    class="form-control"
                    placeholder="Nhập mức giảm"
                    value="{{coupon.mucgiam}}"
                    name="mucgiam"
                    required
                  />
                </div>
                <div class="form-group">
                  <label for="exampleFormControlSelect1">Trạng thái</label>
                  <select
                    class="form-control"
                    id="exampleFormControlSelect1"
                    name="trangthai"
                  >
                    {{#ifCond coupon.trangthai 1}}
                      <option selected value="1">Đang sử dụng</option>
                      <option value="0">Không sử dụng</option>
                    {{else}}
                     <option value="1">Đang sử dụng</option>
                      <option selected value="0">Không sử dụng</option>
                    {{/ifCond}}
                  </select>
                </div>
                <button type="submit" class="btn btn-primary">Cập nhật</button>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>