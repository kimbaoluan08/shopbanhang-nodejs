<div class="content-body">
  <div class="container-fluid">
    <div class="col">
      <div class="card">
        <div class="card-title text-center pt-5">
          <h4>DANH SÁCH SẢN PHẨM </h4>
        </div>
        <div class="card-body">
          <div class="table-responsive">
            <table id="example" class="display" style="min-width: 845px">
                <thead>
                  <th>Hình ảnh</th>
                  <th>Tên sản phẩm</th>
                  <th>Số lượng</th>
                  <th>Trạng thái</th>
                  <th>Chi tiết</th>
                  <th>Thao tác</th>
                </thead>
                <tbody>
                  {{#each product}}
                  <tr style="text-align: center">
                    <td><img src="{{this.hinhanh}}" alt="" width="100px" height="80px"></td>
                    <td style="color: #4d4d4d; width: 270px">{{this.tensp}}</td>
                    <td style="color: #4d4d4d;">{{this.soluong}}</td>
                    <td>
                      {{#ifCond this.trangthai 1}}
                        <span
                          class="badge badge-success"
                          style="color: white;"
                        >Hiển thị</span>
                      {{else}}
                        <span class="badge badge-danger">Ẩn</span>
                      {{/ifCond}}
                    </td>
                    <td style="color: #4d4d4d;"><a href="/admin/product/detail-product/{{this.masp}}">Xem ngay</a></td>
                    <td><a
                        href="/admin/product/edit-product/{{this._id}}"
                        class="btn btn-xs btn-warning"
                      >
                        <i alt="Edit" class="fa fa-pencil"> Thay đổi</i></a>
                      <form
                        class="delete"
                        action="/admin/product/{{this._id}}?_method=DELETE"
                        method="POST"
                        style="display: inline;"
                      >
                        <button
                          type="submit"
                          class="btn btn-xs btn-danger"
                          name="delete-contact"
                        >
                          <i alt="Delete" class="fa fa-trash"> Xoá</i>
                        </button>
                      </form>
                    </td>
                  </tr>
                {{/each}}
                </tfoot>
              </table>
            {{! Alert }}
            <div id="delete-confirm" class="modal fade" role="dialog">
              <div class="modal-dialog">
                <div class="modal-content">
                  <div class="modal-header">
                    <h4 class="modal-title">Thông báo</h4>
                    <button
                      type="button"
                      class="close"
                      data-dismiss="modal"
                    >&times;</button>
                  </div>
                  <div class="modal-body">Bạn có chắc muốn xoá danh mục này?</div>
                  <div class="modal-footer">
                    <button
                      type="button"
                      data-dismiss="modal"
                      class="btn btn-danger"
                      id="delete"
                    >Xoá</button>
                    <button
                      type="button"
                      data-dismiss="modal"
                      class="btn btn-default"
                    >Huỷ bỏ</button>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
{{#if message.success}}
  <script>
  Swal.fire(
     'Thêm thành công',
     'Sản phẩm đã được thêm',
     'success'
  )
  </script>
{{/if}}
