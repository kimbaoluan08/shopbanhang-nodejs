<div class="content-body">
  <div class="container-fluid">
    <div class="row d-flex justify-content-center">
      <div class="col-lg-8">
        <div class="card">
          <div class="card-title text-center pt-5">
            <h4>THAY ĐỔI THÔNG TIN SẢN PHẦM</h4>
          </div>
          <div class="card-body">
            <div class="basic-form">
              <form method="post" action="/admin/product/update-product/{{product._id}}?_method=PUT" enctype="multipart/form-data">
                <div class="form-group">
                  <label>Tên sản phẩm</label>
                  <input
                    type="text"
                    class="form-control"
                    placeholder="Nhập tên sản phẩm"
                    id="tenth"
                    name="tensp"
                    value="{{product.tensp}}"
                    required
                  /> 
                </div>
                <div class="form-group">
                  <label>Hình ảnh sản phẩm</label>
                  <input type="file" name="anhchinh" class="input-group input-file"/> <br>
                  <img src="{{product.hinhanh}}" width="200px">
                </div>
                <div class="form-group">
                  <label>Giá gốc</label>
                  <input
                    type="text"
                    class="form-control"
                    placeholder="Nhập giá gốc"
                    id="tenth"
                    name="giagoc"
                     value="{{product.giagoc}}"
                    required
                  />
                </div>
                <div class="form-group">
                  <label>Giá bán</label>
                  <input
                    type="text"
                    class="form-control"
                    placeholder="Nhập giá bán"
                    id="tenth"
                    name="giaban"
                     value="{{product.giaban}}"
                    required
                  />
                </div><div class="form-group">
                  <label>Số lượng</label>
                  <input
                    type="text"
                    class="form-control"
                    placeholder="Nhập số lượng"
                    id="tenth"
                    name="soluong"
                     value="{{product.soluong}}"
                    required
                  />
                </div>
                <div class="form-group">
                  <label for="exampleFormControlTextarea1">Mô tả sản phẩm</label>
                  <textarea name="mota" id="editor1" rows="10" cols="80">
                    
                  </textarea>
                  <script>
                    CKEDITOR.replace( 'editor1' );
                  </script>
                </div>
                 <div class="form-group">
                  <label for="exampleFormControlSelect1">Danh mục</label>
                  <select class="form-control" id="exampleFormControlSelect1" name="maloai">
                        <option disabled selected>-Chọn danh mục-</option>
                    {{#each cate }}
                        {{#ifCond this.madanhmuc ../product.maloai}}
                        <option value="{{this.madanhmuc}}" selected>{{this.tendanhmuc}}</option>
                        {{else}}
                        <option value="{{this.madanhmuc}}">{{this.tendanhmuc}}</option>
                        {{/ifCond}}
                    {{/each}}
                  </select>
                </div>
                <div class="form-group">
                  <label for="exampleFormControlSelect1">Thương hiệu</label>
                  <select class="form-control" id="exampleFormControlSelect1" name="math">
                        <option disabled selected>-Chọn danh mục-</option>
                    {{#each brand }}
                        {{#ifCond this.mathuonghieu ../product.math}}
                        <option value="{{this.mathuonghieu}}" selected>{{this.tenth}}</option>
                        {{else}}
                        <option value="{{this.mathuonghieu}}">{{this.tenth}}</option>
                        {{/ifCond}} 
                    {{/each}}
                  </select>
                </div>
                <div class="form-group">
                  <label for="exampleFormControlSelect1">Trạng thái</label>
                  <select class="form-control" id="exampleFormControlSelect1" name="trangthai">
                    {{#ifCond product.trangthai 1}}
                    <option  selected value="1">Hiển thị</option>
                    <option  value="0">Ẩn</option>
                    {{else}}
                    <option  selected value="0">Ẩn</option>
                    <option  value="1">Hiển thị</option>
                    {{/ifCond}}
                  </select>
                </div>
                <button type="submit" value="upload" class="btn btn-primary">Cập nhật</button>
                <a href="/admin/product/list"><button type="submit" value="upload" class="btn btn-danger">Huỷ bỏ</button></a>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>