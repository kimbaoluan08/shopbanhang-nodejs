<div class="content-body">
  <div class="container-fluid">
    <div class="row d-flex justify-content-center">
      <div class="col-lg-6">
        <div class="card">
          <div class="card-title text-center pt-5">
            <h4>THÊM THƯƠNG HIỆU SẢN PHẦM</h4>
          </div>
          <div class="card-body">
            <div class="basic-form">
              <form method="post" action="/admin/brand/store">
                <div class="form-group">
                  <label>Tên thương hiệu</label>
                  <input
                    type="text"
                    class="form-control"
                    placeholder="Nhập tên thương hiệu"
                    id="tenth"
                    name="tenth"
                    required
                  />
                </div>
                 <div class="form-group">
                  <label for="exampleFormControlSelect1">Danh mục</label>
                  <select class="form-control" id="exampleFormControlSelect1" name="maloai">
                        <option disabled selected>-Chọn danh mục-</option>
                    {{#each cate }}
                        <option value="{{this.madanhmuc}}">{{this.tendanhmuc}}</option>
                    {{/each}}
                  </select>
                </div>
                <button type="submit" class="btn btn-primary">Thêm thương hiệu</button>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>