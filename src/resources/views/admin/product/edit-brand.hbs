<div class="content-body">
  <div class="container-fluid">
    <div class="row d-flex justify-content-center">
      <div class="col-lg-6">
        <div class="card">
          <div class="card-title text-center pt-5">
            <h4>SỬA THƯƠNG HIỆU SẢN PHẨM</h4>
          </div>
          <div class="card-body">
            <div class="basic-form">
              <form method="post" action="/admin/brand/{{brand._id}}?_method=PUT">
                <div class="form-group">
                  <label>Tên thương hiệu</label>
                  <input
                    type="text"
                    class="form-control"
                    placeholder="Nhập tên danh mục"
                    value="{{brand.tenth}}"
                    id="tenth"
                    name="tenth"
                  />
                </div>
                 <div class="form-group">
                  <label for="exampleFormControlSelect1">Danh mục</label>
                  <select class="form-control" id="exampleFormControlSelect1" name="maloai">
                    {{#each cate}}
                      {{#ifCond ../brand.maloai this.madanhmuc}}
                        <option value="{{this.madanhmuc}}" selected>{{this.tendanhmuc}}</option>
                        {{else}}
                        <option value="{{this.madanhmuc}}">{{this.tendanhmuc}}</option>
                      {{/ifCond}}
                    {{/each}}
                  </select>
                </div>
                <div class="form-group">
                  <label for="exampleFormControlSelect1">Trạng thái</label>
                  <select class="form-control" id="exampleFormControlSelect1" name="trangthai">
                    {{#ifCond brand.trangthai 1}}
                    <option  selected value="{{brand.trangthaith}}">Hiển thị</option>
                    <option  value="0">Ẩn</option>
                    {{else}}
                    <option  selected value="0">Ẩn</option>
                    <option  value="1">Hiển thị</option>
                    {{/ifCond}}
                  </select>
                </div>
                <button type="submit" class="btn btn-primary">Thay đổi thương hiệu</button>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>